<div>
    <h1> Bienvenidos a productos</h1>
    {{#if isAdmin }}
      {{#each products}}
       <div>
         <p>Nombre del producto: {{this.title}}</p>
         <p>Precio del producto: {{this.precio}}</p>
         <p>Stock del producto: {{this.stock}}</p>
         <p>Descripcion del producto: {{this.descripcion}}</p>
         <hr>
       </div>
      {{/each}}
     {{else}}
     <h2>Usted no es admin, no puede ver los productos</h2>
    {{/if}}
</div>
<script src="/js/products.js"></script>
